<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="327.0" prefWidth="405.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.spellchecker.controller.SpellCheckerController">
   <top>
      <Label text="Lab3_SpellChecker" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox prefHeight="300.0" prefWidth="627.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="60.0" prefWidth="405.0">
               <children>
                  <Label prefHeight="17.0" prefWidth="116.0" text="Choose the language:">
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
                  </Label>
                  <ComboBox fx:id="ComboBox" onAction="#ComboSelection" prefWidth="150.0">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </ComboBox>
               </children>
            </HBox>
            <HBox prefHeight="124.0" prefWidth="405.0">
               <children>
                  <TextField fx:id="TxtInserimento" editable="false" prefHeight="94.0" prefWidth="361.0">
                     <HBox.margin>
                        <Insets left="22.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="TOP_RIGHT" prefHeight="38.0" prefWidth="405.0">
               <children>
                  <Button fx:id="SpellCheckButton" disable="true" mnemonicParsing="false" onAction="#doSpellCheck" text="SpellCheck">
                     <HBox.margin>
                        <Insets right="22.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox prefHeight="22.0" prefWidth="405.0">
               <children>
                  <Label text="Word wrongs">
                     <HBox.margin>
                        <Insets left="22.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextArea fx:id="TxtResult" prefHeight="70.0" prefWidth="363.0">
                     <HBox.margin>
                        <Insets left="22.0" />
                     </HBox.margin>
                  </TextArea>
               </children>
            </HBox>
            <HBox alignment="TOP_RIGHT" prefWidth="405.0">
               <children>
                  <Label fx:id="LabelResult" text="The text has .... errors" textFill="RED">
                     <HBox.margin>
                        <Insets left="5.0" top="10.0" />
                     </HBox.margin>
                  </Label>
                  <Button fx:id="ClearTextButton" mnemonicParsing="false" onAction="#doClearText" text="Clear text">
                     <HBox.margin>
                        <Insets left="22.0" right="22.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox prefWidth="405.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="LabelTime" alignment="TOP_LEFT" text="Spell check completed in ..... second">
               <HBox.margin>
                  <Insets left="22.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
   </bottom>
</BorderPane>
